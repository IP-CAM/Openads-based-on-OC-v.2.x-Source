		if (!empty($data['filter_customer'])) {
			$sql .= " AND c.nickname LIKE '%" . $this->db->escape($data['filter_customer']) . "%'";
		}
		if (!empty($data['filter_customer_id'])) {
			$sql .= " AND a.customer_id = '" . (int)$data['filter_customer_id'] . "'";
